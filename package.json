{
  "name": "event-api",
  "version": "1.0.0",
  "description": "An event API",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf dist/",
    "build": "tsc",
    "dev": "NODE_ENV=development ts-node-dev --respawn --transpileOnly index.ts",
    "prod": "NODE_ENV=production node dist/index.js",
    "lint": "tslint --project . --fix",
    "format": "prettier --write './**/*.{js,json,ts}' '!./node_modules/**'",
    "test": "jest --coverage",
    "docker": "npm-run-all clean build docker:build",
    "docker:build": "cross-conf-env docker build -t $npm_package_name ."
  },
  "author": "dougefr",
  "repository": "https://github.com/dougefr/event-api",
  "license": "ISC",
  "dependencies": {
    "ajv": "6.10.1",
    "axios": "0.21.1",
    "koa": "2.7.0",
    "koa-body": "4.1.0",
    "koa-router": "7.4.0",
    "mongodb": "3.2.7",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "1.1.0",
    "@types/jest": "24.0.15",
    "@types/koa": "2.0.49",
    "@types/koa-router": "7.0.42",
    "@types/mongodb": "3.1.28",
    "@types/node": "12.6.2",
    "@types/supertest": "2.0.8",
    "cross-conf-env": "1.1.2",
    "husky": "3.0.0",
    "jest": "24.8.0",
    "lint-staged": "9.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "1.18.2",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-node-dev": "1.0.0-pre.40",
    "tslint": "5.18.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.5.3"
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "git add"
    ],
    "*.{js,json,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
